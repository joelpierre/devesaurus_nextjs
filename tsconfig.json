{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom.iterable",
      "dom"
    ],
    "allowJs": true,
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@jpp/shared/*": [
        "src/shared/*"
      ],
      "@jpp/typings/*": [
        "src/typings/*"
      ],
      "@jpp/atoms/*": [
        "src/components/_atoms/*"
      ],
      "@jpp/molecules/*": [
        "src/components/_molecules/*"
      ],
      "@jpp/organisms/*": [
        "src/components/_organisms/*"
      ],
      "@jpp/layouts/*": [
        "src/layouts/*"
      ],
      "@jpp/components/*": [
        "src/components/*"
      ],
      "lodash/*": [
        "node_modules/@types/lodash-es/*"
      ]
    },
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "rootDirs": [
      "src"
    ]
  },
  "exclude": [
    "node_modules",
    "__mocks__",
    "src/**/__mocks__/*",
    "config",
    "coverage",
    "next.config.js",
    "postcss.config.js",
    "jest.config.js",
    "public/**",
    "build",
    "scripts",
    "webpack",
    "jest",
    ".next"
  ]
}
